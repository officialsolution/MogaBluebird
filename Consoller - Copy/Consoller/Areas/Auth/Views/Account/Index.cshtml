@model IEnumerable<Consoller.Areas.Auth.Models.tblreceptionist>

@{
    ViewBag.Title = "Index";

        Layout = "~/Areas/Auth/Views/Shared/Layout.cshtml";
   

    var active = "Active";
    var Deactive = "Deactive";
}

<h2><b>Index</b></h2>

<p>
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-primary" })
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.contact)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.rid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.login)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.password)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.status)
                </th>
                <th>Action</th>
            </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.contact)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.rid)
                    </td>
                    <td>
                        <img src="~/UploadedFiles/@item.image" width="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.login)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.password)
                    </td>

                    <td>

                        @if (item.status == true)
                        {
                            <span class="label label-success">@active.ToString()</span>
                        }
                        else
                        {
                            <span class="label label-danger">@Deactive.ToString()</span>
                        }
                        @*@Html.DisplayFor(modelItem => item.status)*@
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "label label-warning" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "label label-primary" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "label label-danger" })
                    </td>
                </tr>
            }

    </table>
    </div>