                                            @item.EmailId
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Email Password
                                        </td>
                                        <td>
                                            @item.EmailPassword
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Caq User
                                        </td>
                                        <td>
                                            @item.CaqUser
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Caq Password
                                        </td>
                                        <td>
                                            @item.CaqPassword
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Arrima User
                                        </td>
                                        <td>
                                            @item.ArrimaUser
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Arrima Password
                                        </td>
                                        <td>
                                            @item.Password
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Security Question
                                        </td>
                                        <td>
                                            @item.SecurityQuestion
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Security Answer
                                        </td>
                                        <td>
                                            @item.Answer
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            TT
                                        </td>
                                        <td>
                                            @if (item.Files == null)
                                            {
                                                <span class="text-danger">Not Found</span>
                                            }
                                            else
                                            {
                                                <a href="~/Uploadfile/@item.Files" target="_blank" class="text-primary">Download Now</a>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Certificate
                                        </td>
                                        <td>
                                            @if (item.Certificate == null)
                                            {
                                                <span class="text-danger">Not Found</span>
                                            }
                                            else
                                            {
                                                <a href="~/Uploadfile/@item.Certificate" target="_blank" class="text-primary">Download Now</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </p>

            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="media">


                    <div class="media-body overflow-hidden">
                        <h5 class="text-truncate font-size-15">Medical Details</h5>

                    </div>
                </div>

                <p class="text-muted">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-fw-widget" id="table3">
                            <thead>
                                <tr>

                                    <th>
                                        Date
                                    </th>
                                    <th>
                                        Hospital
                                    </th>
                                    <th>
                                        Booked By
                                    </th>
                                    <th>
                                        File
                                    </th>
                                    <th>
                                       Note
                                    </th>

                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Medical)
                                {
                                    <tr>

                                        <td>
                                            @Convert.ToDateTime(item.Date).ToString("dd/MM/yyyy")
                                        </td>
                                        <td>
                                            @item.HospitalName
                                        </td>
                                        <td>
                                            @item.BookedBy
                                        </td>
                                       
                                        <td>
                                            @if (item.Files == null)
                                            {
                                                <span class="text-danger">Not Found</span>
                                            }
                                            else
                                            {
                                                <a href="~/Uploadfile/@item.Files" target="_blank" class="text-primary">Download Now</a>
                                            }
                                        </td>
                                        <td>
                                            @item.Note
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </p>

            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="media">


                    <div class="media-body overflow-hidden">
                        <h5 class="text-truncate font-size-15">Documents Details</h5>

                    </div>
                </div>

                <p class="text-muted">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-fw-widget" id="table3">
                            <thead>
                                <tr>

                                    <th>
                                        Document
                                    </th>
                                    <th>
                                        Download
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in doc)
                                {
                                    <tr>

                                        
                                        <td>
                                            @item.FileName
                                        </td>
                                        <td>
                                            @if (item.Doc == null)
                                            {
                                                <span class="text-danger">Not Found</span>
                                            }
                                            else
                                            {
                                                <a href="~/Uploadfile/@item.Doc" target="_blank" class="text-primary">Download Now</a>
                                            }
                                        </td>

                                    </tr>
                                   
                                  
                                    
                                }
                            </tbody>
                        </table>
                    </div>
                </p>

            </div>
        </div>
    </div>
