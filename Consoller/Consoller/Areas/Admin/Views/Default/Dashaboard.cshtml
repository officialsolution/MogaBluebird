        text: "Today Profit/Loss"
    },
    subtitles: [{
        text: ""
    }],
    data: [{
        type: "pie",
        startAngle: 180,
        toolTipContent: "<b>{label}</b>: {y}",
        showInLegend: "true",
        legendText: "{label}",
        indexLabel: "{label} - {y}",
        dataPoints: @Html.Raw(ViewBag.Report)
    }]
});
chart2.render();

}
  
</script>
