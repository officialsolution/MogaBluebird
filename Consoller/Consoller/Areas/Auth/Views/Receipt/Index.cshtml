@model IEnumerable<Consoller.Areas.Auth.Models.tblReceipt>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Auth/Views/Shared/Layout.cshtml";
    var active = "Active";
    var Deactive = "Deactive";
}

<h2><b>Receipt List</b></h2>

<p>
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-primary" })
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Start_no)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.End_no)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Current_Recipt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Start_no)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.End_no)
                    </td>
                    <td>
                        @Convert.ToDateTime(@item.Date).ToString(" dd-MM-yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Current_Recipt)
                    </td>
                    <td>                        
                       @if (item.Status == true)
                       {
                        <span class="label label-success">@active.ToString()</span>
                       }
                       else
                       {
                        <span class="label label-danger">@Deactive.ToString()</span>
                       }
                        @*@Html.DisplayFor(modelItem => item.Status)*@
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "label label-warning" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "label label-primary" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "label label-danger" })
                    </td>
                </tr>
            }

    </table>
    </div>