@model IEnumerable<Consoller.Areas.Auth.Models.Stu_rec>
    @using Consoller.Areas.Auth.Models
    @{
        ViewBag.Title = "StudentReport";
        Layout = "~/Areas/Auth/Views/Shared/Layout.cshtml";
        dbcontext db = new dbcontext();
    }

    <h2><b>Student Report</b></h2>

    @using (Html.BeginForm("StudentReport", "Default", FormMethod.Post))
    {
        <div class="col-md-12" style="padding-bottom:20px;">
            <div class="row">
                <div class="col-md-3">
                    <label>From Date</label>
                    <input id="fromdate" type="date" name="fromdate" class="form-control" placeholder="Select Date" />
                </div>
                <div class="col-md-3">
                    <label>To Date</label>
                    <input id="todate" type="date" name="todate" class="form-control" placeholder="Select Date" />
                </div>
                <div class="col-md-3">
                    <input id="submit" type="submit" value="submit" class="btn btn-primary" style="margin-top:35px" />
                </div>
            </div>


        </div>
    }
    @if (Model != null)
    { <div class="col-md-12" style="padding-bottom:20px;">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>
                                Date
                            </th>
                        <th>
                            Roll No
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Course
                        </th>
                        <th>
                            Recipt No
                        </th>

                        <th>
                            Amount
                        </th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Convert.ToDateTime(item.Date).ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @item.RollNo
                    </td>
                    <td>
                        @item.name
                    </td>
                    <td>
                        @item.CourseName
                    </td>
                    <td>
                        @item.ReciptNo
                    </td>
                    <td>
                        @item.Amount
                    </td>
                </tr>
                }

            </table>
        </div>
    </div>
    }
